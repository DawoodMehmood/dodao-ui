{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IndustryGroupCriteria",
  "type": "object",
  "properties": {
    "key": { "type": "string" },
    "name": { "type": "string" },
    "shortDescription": { "type": "string" },
    "importantMetrics": {
      "type": "array",
      "items": { "$ref": "#/definitions/ImportantMetric" }
    },
    "reports": {
      "type": "array",
      "items": { "$ref": "#/definitions/Report" }
    }
  },
  "required": [
    "key",
    "name",
    "shortDescription",
    "importantMetrics",
    "reports"
  ],
  "definitions": {
    "ImportantMetric": {
      "type": "object",
      "properties": {
        "metric": { "type": "string" },
        "value": { "type": "number" }
      },
      "required": ["metric", "value"]
    },
    "Report": {
      "type": "object",
      "properties": {
        "key": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "outputType": {
          "type": "string",
          "enum": ["Text", "BarGraph", "PieChart"]
        }
      },
      "required": ["key", "name", "description", "outputType"]
    }
  }
}
